{
  "author": "Andre-Philippe Paquet <appaquet@gmail.com>",
  "name": "exomind-web",
  "version": "0.1.10",
  "description": "",
  "keywords": [],
  "license": "Apache-2.0",
  "repository": "https://github.com/appaquet/exomind",
  "main": "index.js",
  "scripts": {
    "start": "webpack --config webpack.prod.js && cp src/server.js dist/ && cd dist && node server.js",
    "start_dev": "webpack-dev-server --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "build_dev": "webpack --config webpack.dev.js",
    "build_ios": "webpack --config webpack.ios.js",
    "build_ios_watch": "webpack-dev-server --config webpack.ios.js --dev",
    "electron_dev": "electron-webpack dev",
    "electron_build": "electron-webpack",
    "electron": "yarn electron_build && electron-builder --dir",
    "electron_dist": "yarn electron_build && electron-builder",
    "test": "jest",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/electron/main",
      "extraEntries": [
        "@/preload.js"
      ]
    },
    "whiteListedModules": [
      "bootstrap",
      "classnames",
      "clipboard-copy",
      "core-js",
      "dom-serializer",
      "domhandler",
      "domutils",
      "draft-convert",
      "draft-js",
      "emoji-regex",
      "exocore",
      "font-awesome",
      "htmlparser2",
      "less",
      "linkifyjs",
      "lodash",
      "mobx",
      "mobx-react",
      "prop-types",
      "protobufjs",
      "react",
      "react-dom",
      "react-flatpickr",
      "sanitize-html",
      "source-map-support",
      "starts-with-emoji"
    ],
    "renderer": {
      "sourceDirectory": "src/electron/renderer",
      "template": "src/electron/renderer/index.html",
      "webpackConfig": "webpack.electron.extra.js"
    }
  },
  "build": {
    "appId": "io.exomind.exomind-electron",
    "productName": "Exomind",
    "directories": {
      "buildResources": "src/electron/build/"
    }
  },
  "dependencies": {
    "bootstrap": "^3.3.5",
    "classnames": "^2.3.1",
    "clipboard-copy": "^4.0.1",
    "core-js": "^3.18.3",
    "dom-serializer": "1.3.2",
    "domhandler": "^4.2.2",
    "domutils": "^2.4.2",
    "draft-convert": "^2.1.12",
    "draft-js": "^0.11.7",
    "emoji-regex": "^10.0.0",
    "exocore": "0.1.14",
    "font-awesome": "^4.4.0",
    "htmlparser2": "^6.0.0",
    "less": "^4.1.2",
    "linkifyjs": "^3.0.3",
    "lodash": "^4.17.21",
    "mobx": "^6.3.3",
    "mobx-react": "^7.2.0",
    "prop-types": "latest",
    "protobufjs": "^6.10.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-flatpickr": "^3.10.6",
    "sanitize-html": "^2.5.2",
    "source-map-support": "^0.5.20",
    "starts-with-emoji": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/classnames": "^2.3.1",
    "@types/domhandler": "^2.4.2",
    "@types/draft-convert": "^2.1.4",
    "@types/draft-js": "^0.11.6",
    "@types/jest": "^27.0.2",
    "@types/linkifyjs": "^2.1.4",
    "@types/lodash": "^4.14.175",
    "@types/node": "^16.10.9",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/react-flatpickr": "^3.8.4",
    "@types/sanitize-html": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.2.2",
    "cookie-parser": "^1.4.5",
    "css-loader": "^5.2.7",
    "electron": "^15.1.2",
    "electron-builder": "^22.11.7",
    "electron-webpack": "^2.8.2",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.0.8",
    "express": "^4.17.1",
    "file-loader": "^6.1.0",
    "html-loader": "^1.3.1",
    "html-webpack-plugin": "^4.5.2",
    "jest": "^26.5.3",
    "json-loader": "^0.5.7",
    "less-loader": "^7.3.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^8.3.0",
    "typescript": "^4.4.4",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.8.0"
  }
}
