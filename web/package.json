{
  "author": "Andre-Philippe Paquet <appaquet@gmail.com>",
  "name": "exomind-web",
  "version": "0.1.12",
  "description": "",
  "keywords": [],
  "license": "Apache-2.0",
  "repository": "https://github.com/appaquet/exomind",
  "main": "index.js",
  "scripts": {
    "start": "webpack --config webpack.prod.js && cp src/server.js dist/ && cd dist && node server.js",
    "start_dev": "webpack-dev-server --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "build_dev": "webpack --config webpack.dev.js",
    "build_ios": "webpack --config webpack.ios.js",
    "build_ios_watch": "webpack-dev-server --config webpack.ios.js --dev",
    "electron_dev": "electron-webpack dev",
    "electron_build": "electron-webpack",
    "electron": "yarn electron_build && electron-builder --dir",
    "electron_dist": "yarn electron_build && electron-builder",
    "test": "jest",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/electron/main",
      "extraEntries": [
        "@/preload.js"
      ]
    },
    "whiteListedModules": [
      "bootstrap",
      "classnames",
      "clipboard-copy",
      "core-js",
      "dom-serializer",
      "domhandler",
      "domutils",
      "emoji-regex",
      "exocore",
      "font-awesome",
      "htmlparser2",
      "less",
      "@popperjs/core",
      "linkifyjs",
      "lodash",
      "mobx",
      "mobx-react",
      "prop-types",
      "protobufjs",
      "react",
      "react-dom",
      "react-flatpickr",
      "sanitize-html",
      "source-map-support",
      "starts-with-emoji",
      "@bangle.dev/base-components",
      "@bangle.dev/core",
      "@bangle.dev/pm",
      "@bangle.dev/react"
    ],
    "renderer": {
      "sourceDirectory": "src/electron/renderer",
      "template": "src/electron/renderer/index.html",
      "webpackConfig": "webpack.electron.extra.js"
    }
  },
  "build": {
    "appId": "io.exomind.exomind-electron",
    "productName": "Exomind",
    "directories": {
      "buildResources": "src/electron/build/"
    },
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    }
  },
  "dependencies": {
    "@bangle.dev/base-components": "^0.28.3",
    "@bangle.dev/core": "^0.28.3",
    "@bangle.dev/pm": "^0.28.3",
    "@bangle.dev/react": "^0.28.3",
    "@popperjs/core": "^2.11.0",
    "bootstrap": "^3.3.5",
    "classnames": "^2.3.1",
    "clipboard-copy": "^4.0.1",
    "core-js": "^3.20.1",
    "dom-serializer": "1.3.2",
    "domhandler": "^4.3.0",
    "domutils": "^2.4.2",
    "emoji-regex": "^10.0.0",
    "exocore": "0.1.17",
    "font-awesome": "^4.4.0",
    "htmlparser2": "^7.2.0",
    "less": "^4.1.2",
    "linkifyjs": "^3.0.4",
    "lodash": "^4.17.21",
    "mobx": "^6.3.10",
    "mobx-react": "^7.2.1",
    "prop-types": "15.8.0",
    "protobufjs": "^6.10.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-flatpickr": "^3.10.6",
    "sanitize-html": "^2.6.1",
    "source-map-support": "^0.5.21",
    "starts-with-emoji": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-react": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/classnames": "^2.3.1",
    "@types/domhandler": "^2.4.2",
    "@types/jest": "^27.0.3",
    "@types/linkifyjs": "^2.1.4",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.4",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-flatpickr": "^3.8.4",
    "@types/sanitize-html": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.9.0",
    "babel-loader": "^8.2.3",
    "cookie-parser": "^1.4.6",
    "css-loader": "^5.2.7",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "electron-webpack": "^2.8.2",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "express": "^4.17.2",
    "file-loader": "^6.1.0",
    "html-loader": "^1.3.1",
    "html-webpack-plugin": "^4.5.2",
    "jest": "^27.4.5",
    "json-loader": "^0.5.7",
    "less-loader": "^7.3.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^27.1.2",
    "ts-loader": "^8.3.0",
    "typescript": "^4.5.4",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.8.0"
  }
}
