{
  "author": "Andre-Philippe Paquet <appaquet@gmail.com>",
  "name": "exomind-web",
  "version": "0.1.2",
  "description": "",
  "keywords": [],
  "license": "Apache-2.0",
  "repository": "https://github.com/appaquet/exomind",
  "main": "index.js",
  "scripts": {
    "start": "webpack --config webpack.prod.js && cp src/server.js dist/ && cd dist && node server.js",
    "start_dev": "webpack-dev-server --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "build_dev": "webpack --config webpack.dev.js",
    "build_ios": "webpack --config webpack.ios.js",
    "build_ios_watch": "webpack-dev-server --config webpack.ios.js --dev",
    "electron_dev": "electron-webpack dev",
    "electron_build": "electron-webpack",
    "electron": "yarn electron_build && electron-builder --dir",
    "electron_dist": "yarn electron_build && electron-builder",
    "test": "jest",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts' 'src/**/*.tsx'"
  },
  "electronWebpack": {
    "main": {
      "sourceDirectory": "src/electron/main"
    },
    "whiteListedModules": [
      "exocore"
    ],
    "renderer": {
      "sourceDirectory": "src/electron/renderer",
      "template": "src/electron/renderer/index.html"
    }
  },
  "build": {
    "appId": "io.exomind.exomind-electron",
    "productName": "Exomind",
    "directories": {
      "buildResources": "src/electron/build/"
    }
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "bootstrap": "^3.3.5",
    "classnames": "^2.3.1",
    "clipboard-copy": "^4.0.1",
    "core-js": "^3.10.1",
    "dom-serializer": "1.2.0",
    "domhandler": "^4.1.0",
    "domutils": "^2.4.2",
    "draft-convert": "^2.1.10",
    "draft-js": "^0.11.7",
    "exocore": "https://github.com/appaquet/exocore/releases/download/v0.1.4-pre5/exocore-web.tar.gz",
    "fbemitter": "^3.0.0",
    "font-awesome": "^4.4.0",
    "htmlparser2": "^6.0.0",
    "less": "^4.1.1",
    "linkifyjs": "^2.1.9",
    "lodash": "^4.17.21",
    "mobx": "^6.1.8",
    "mobx-react": "^7.1.0",
    "prop-types": "latest",
    "protobufjs": "^6.10.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-flatpickr": "^3.10.6",
    "sanitize-html": "^2.3.3",
    "source-map-support": "^0.5.19",
    "webpack": "^4.44.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-syntax-async-generators": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-flow": "^7.13.13",
    "@babel/preset-react": "^7.13.13",
    "@types/classnames": "^2.2.11",
    "@types/domhandler": "^2.4.1",
    "@types/draft-convert": "^2.1.1",
    "@types/draft-js": "^0.11.1",
    "@types/fbemitter": "^2.0.32",
    "@types/jest": "^26.0.22",
    "@types/linkifyjs": "^2.1.3",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-flatpickr": "^3.8.3",
    "@types/sanitize-html": "^1.27.2",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "cookie-parser": "^1.4.5",
    "css-loader": "^5.2.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.1",
    "electron-webpack": "^2.8.2",
    "eslint": "^7.23.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.0.8",
    "express": "^4.17.1",
    "file-loader": "^6.1.0",
    "html-loader": "^1.3.1",
    "html-webpack-plugin": "^4.5.2",
    "jest": "^26.5.3",
    "json-loader": "^0.5.7",
    "less-loader": "^7.3.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.3",
    "url-loader": "^4.1.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.3.0"
  }
}
