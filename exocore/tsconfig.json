{
  "compilerOptions": {
    "outDir": "./clients/web/tsc/",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "module": "esnext",
    "target": "es2017",
    "allowJs": false,
    "checkJs": false,
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "esnext.array",
      "dom"
    ],
    "types": [
      "long"
    ],
  },
  "include": [
    "clients/web/ts/*"
  ],
  "exclude": [
    "node_modules",
    "clients/web/tsc"
  ]
}